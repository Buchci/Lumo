@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 text-start">
                <h1 class="display-2 fw-bold mb-3" style="color: var(--main-color);">@Localizer["AppName"]</h1>
                <h2 class="h1 fw-light mb-4" style="color: var(--text-color);">@Localizer["HeroSubtitle"]</h2>
                <p class="lead mb-5" style="color: var(--text-color); opacity: 0.8;">
                    @Localizer["HeroDescription"]
                </p>
                <div class="d-flex gap-3">
                    <a href="/Identity/Account/Register" class="btn btn-lumo btn-lg px-5 py-3">@Localizer["StartBtn"]</a>
                    <a href="/Identity/Account/Login" class="btn btn-lumo-secondary btn-lg px-5 py-3">@Localizer["LoginBtn"]</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section Styles */
    .min-vh-75 {
        min-height: 75vh;
    }

    .btn-lumo {
        border: 2px solid var(--main-color) !important;
        color: var(--main-color) !important;
        background-color: transparent !important;
        font-weight: 600;
        transition: all 0.3s ease-in-out !important;
        border-radius: 12px;
    }

        .btn-lumo:hover {
            background-color: var(--main-color) !important;
            color: #ffffff !important;
        }

    .btn-lumo-secondary {
        border: 2px solid var(--border-color) !important;
        color: var(--text-color) !important;
        background-color: transparent !important;
        border-radius: 12px;
        transition: all 0.3s ease-in-out !important;
    }

        .btn-lumo-secondary:hover {
            background-color: var(--border-color) !important;
        }

    .hero-section {
        animation: fadeIn 1.2s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>