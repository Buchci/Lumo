@using Microsoft.Extensions.Options
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using Microsoft.AspNetCore.Identity
@inject UserManager<Lumo.Models.ApplicationUser> UserManager
@{
    string userDisplayName = "User";
    if (User.Identity.IsAuthenticated)
    {
        var appUser = await UserManager.GetUserAsync(User);
        userDisplayName = appUser?.Nickname ?? User.Identity.Name;
    }
}
<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName" data-bs-theme="light">
<head>
    <script>
        (function () {
            const savedTheme = localStorage.getItem("theme") || "light";
            document.documentElement.setAttribute("data-bs-theme", savedTheme);

            const observer = new MutationObserver(function (mutations, obs) {
                const btn = document.getElementById("themeToggle");
                if (btn) {
                    btn.innerHTML = savedTheme === "light" ? "🌙" : "☀️";
                    obs.disconnect(); 
                }
            });

            observer.observe(document.documentElement, {
                childList: true,
                subtree: true
            });
        })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lumo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lumo.styles.css" asp-append-version="true" />
</head>
<body class="no-transition">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo / Home -->
                <a class="navbar-brand-custom @(User.Identity.IsAuthenticated ? "" : "opacity-75")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    LUMO
                </a>

                <!-- Hamburger menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="navbarMain">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @* Diary *@
                        <li class="nav-item">
                            <a class="nav-link-custom @(User.Identity.IsAuthenticated ? "" : "disabled")"
                               asp-controller="Diary" asp-action="Index">
                                @Localizer["Diary"]
                            </a>
                        </li>

                        @* Tags *@
                        <li class="nav-item">
                            <a class="nav-link-custom @(User.Identity.IsAuthenticated ? "" : "disabled")"
                               asp-controller="Tag" asp-action="Index">
                                @Localizer["Tags"]
                            </a>
                        </li>

                        @* Favorites *@
                        <li class="nav-item">
                            <a class="nav-link-custom @(User.Identity.IsAuthenticated ? "" : "disabled")"
                               asp-controller="Diary" asp-action="Favorites">
                                @Localizer["Favorites"]
                            </a>
                        </li>

                        @* Statistics *@
                        <li class="nav-item">
                            <a class="nav-link-custom @(User.Identity.IsAuthenticated ? "" : "disabled")"
                               asp-controller="Statistics" asp-action="Index">
                                @Localizer["Statistics"]
                            </a>
                        </li>
                    </ul>

                    <!-- Right side -->
                    }
                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        @* Language switcher *@
                        <li class="nav-item dropdown me-2">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                @System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form method="post" asp-controller="Culture" asp-action="SetLanguage" class="m-0 p-0">
                                        <input type="hidden" name="culture" value="en" />
                                        <input type="hidden" name="returnUrl" value="@Url.Content(Context.Request.Path + Context.Request.QueryString)" />
                                        <button type="submit" class="dropdown-item">English</button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-controller="Culture" asp-action="SetLanguage" class="m-0 p-0">
                                        <input type="hidden" name="culture" value="pl" />
                                        <input type="hidden" name="returnUrl" value="@Url.Content(Context.Request.Path + Context.Request.QueryString)" />
                                        <button type="submit" class="dropdown-item">Polski</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <button id="themeToggle" class="btn btn-link nav-link">
                                    🌙 / ☀️
                                </button>
                            </li>
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    @Localizer["Hello"], @userDisplayName!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Manage">
                                            @Localizer["Profile"]
                                        </a>
                                    </li>
                                    <li>
                                        <form id="logoutForm" class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link nav-link m-0 p-0">
                                                @Localizer["Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2026 - Lumo - Diary & Mood Tracker
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const themeToggle = document.getElementById("themeToggle");
            const htmlElement = document.documentElement;

            function updateIcon(theme) {
                if (!themeToggle) return;
                themeToggle.innerHTML = theme === "light" ? "🌙" : "☀️";
            }
            themeToggle.addEventListener("click", function () {
                const currentTheme = htmlElement.getAttribute("data-bs-theme");
                const newTheme = currentTheme === "light" ? "dark" : "light";

                htmlElement.setAttribute("data-bs-theme", newTheme);
                localStorage.setItem("theme", newTheme);
                updateIcon(newTheme);
            });
        });

        window.addEventListener("load", () => {
            setTimeout(() => {
                document.body.classList.remove("no-transition");
            }, 100);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
