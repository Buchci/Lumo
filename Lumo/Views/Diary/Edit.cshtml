@model Lumo.Models.DiaryEntry
@{
    ViewData["Title"] = "Edytuj wpis";
    var allTags = ViewBag.AllTags as List<Lumo.Models.Tag> ?? new List<Lumo.Models.Tag>();
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Edytuj wspomnienie</h4>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">Powrót do kalendarza</a>
        </div>
        <div class="card-body">
            <form id="editEntryForm">
                <input type="hidden" id="entryId" value="@Model.Id" />

                <div class="mb-3">
                    <label for="title" class="form-label fw-bold">Tytuł</label>
                    <input type="text" class="form-control" id="title" value="@Model.Title" required>
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label fw-bold">Treść wpisu</label>
                    <textarea class="form-control" id="content" rows="8" required>@Model.Content</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Tagi</label>
                    <div class="d-flex flex-wrap gap-2 p-3 border rounded bg-light">
                        @foreach (var tag in allTags)
                        {
                            // Sprawdzamy, czy ten konkretny wpis ma już ten tag
                            bool isChecked = Model.Tags.Any(t => t.Id == tag.Id);
                            <div class="form-check me-3">
                                <input class="form-check-input tag-checkbox" type="checkbox"
                                       value="@tag.Id" id="tag_@tag.Id" @(isChecked ? "checked" : "")>
                                <label class="form-check-label" for="tag_@tag.Id">
                                    @(tag.CustomName ?? tag.ResourceKey)
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="entryDate" class="form-label fw-bold">Data</label>
                        <input type="date" class="form-control" id="entryDate" value="@Model.EntryDate.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="moodRating" class="form-label fw-bold">Nastrój</label>
                        <select class="form-select" id="moodRating">
                            <!option value="1" @(Model.MoodRating == 1 ? "selected" : "")>😢 Bardzo źle</!option>
                            <!option value="2" @(Model.MoodRating == 2 ? "selected" : "")>☹️ Źle</!option>
                            <!option value="3" @(Model.MoodRating == 3 ? "selected" : "")>😐 Neutralnie</!option>
                            <!option value="4" @(Model.MoodRating == 4 ? "selected" : "")>🙂 Dobrze</!option>
                            <!option value="5" @(Model.MoodRating == 5 ? "selected" : "")>😄 Wyśmienicie</!option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="isFavorite" @(Model.IsFavorite ? "checked" : "")>
                            <label class="form-check-label fw-bold" for="isFavorite">Ulubione ⭐</label>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-grid shadow-sm">
                    <button type="submit" class="btn btn-success btn-lg">Zapisz zmiany</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#editEntryForm').on('submit', function (e) {
            e.preventDefault();

            const id = $('#entryId').val();
            const data = {
                title: $('#title').val(),
                content: $('#content').val(),
                entryDate: $('#entryDate').val(),
                moodRating: parseInt($('#moodRating').val()),
                isFavorite: $('#isFavorite').is(':checked'),
                tagIds: $('.tag-checkbox:checked').map(function () { return parseInt($(this).val()); }).get()
            };

            $.ajax({
                url: '/api/diary/' + id,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function () {
                    window.location.href = '/Diary';
                },
                error: function (xhr) {
                    alert('Błąd podczas zapisywania zmian.');
                    console.error(xhr);
                }
            });
        });
    </script>
}