@model Lumo.Models.DiaryEntry
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.Extensions.Localization
@inject IStringLocalizerFactory LocalizerFactory
@{
    ViewData["Title"] = Localizer["EditTitle"];
    var allTags = ViewBag.AllTags as List<Lumo.Models.Tag> ?? new List<Lumo.Models.Tag>();
    var assemblyName = typeof(Program).Assembly.GetName().Name!;
    var tagLocalizer = LocalizerFactory.Create("Tags", assemblyName);
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center"
             style="background-color: var(--secondary-color); border-bottom: 1px solid var(--border-color);">
            <h4 class="mb-0 text-white">@Localizer["EditHeader"]</h4>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">@Localizer["BackToCalendar"]</a>
        </div>

        <div class="card-body">
            <form id="editEntryForm" data-error-msg="@Localizer["ErrorSave"]">
                <input type="hidden" id="entryId" value="@Model.Id" />

                <div class="mb-3">
                    <label for="title" class="form-label fw-bold">@Localizer["TitleLabel"]</label>
                    <input type="text" class="form-control" id="title" value="@Model.Title" required>
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label fw-bold">@Localizer["ContentLabel"]</label>
                    <textarea class="form-control" id="content" rows="8" required>@Model.Content</textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">@Localizer["TagsLabel"]</label>
                    <div class="d-flex flex-wrap gap-2 p-3 border rounded"
                         style="background-color: var(--card-bg); border-color: var(--border-color) !important;">
                        @foreach (var tag in allTags)
                        {
                            bool isChecked = Model.Tags.Any(t => t.Id == tag.Id);

                            var translatedName = tag.CustomName
                            ?? (tag.IsGlobal ? tagLocalizer[tag.ResourceKey!].Value : tag.ResourceKey);

                            <div class="form-check me-3">
                                <input class="form-check-input tag-checkbox" type="checkbox"
                                       style="cursor: pointer;"
                                       value="@tag.Id" id="tag_@tag.Id" @(isChecked ? "checked" : "")>
                                <label class="form-check-label" for="tag_@tag.Id" style="cursor: pointer;">
                                    @translatedName
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="entryDate" class="form-label fw-bold">@Localizer["DateLabel"]</label>
                        <input type="date" class="form-control" id="entryDate" value="@Model.EntryDate.ToString("yyyy-MM-dd")">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label for="moodRating" class="form-label fw-bold">@Localizer["MoodLabel"]</label>
                        <select class="form-select" id="moodRating">
                            <!option value="1" @(Model.MoodRating == 1 ? "selected" : "")>@Localizer["Mood1"]</!option>
                            <!option value="2" @(Model.MoodRating == 2 ? "selected" : "")>@Localizer["Mood2"]</!option>
                            <!option value="3" @(Model.MoodRating == 3 ? "selected" : "")>@Localizer["Mood3"]</!option>
                            <!option value="4" @(Model.MoodRating == 4 ? "selected" : "")>@Localizer["Mood4"]</!option>
                            <!option value="5" @(Model.MoodRating == 5 ? "selected" : "")>@Localizer["Mood5"]</!option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="isFavorite" @(Model.IsFavorite ? "checked" : "")>
                            <label class="form-check-label fw-bold" for="isFavorite">@Localizer["FavoriteLabel"]</label>
                        </div>
                    </div>
                </div>

                <hr style="border-color: var(--border-color);" />

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">@Localizer["SaveChanges"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#editEntryForm').on('submit', function (e) {
            e.preventDefault();

            const $form = $(this);
            const id = $('#entryId').val();
            const data = {
                title: $('#title').val(),
                content: $('#content').val(),
                entryDate: $('#entryDate').val(),
                moodRating: parseInt($('#moodRating').val()),
                isFavorite: $('#isFavorite').is(':checked'),
                tagIds: $('.tag-checkbox:checked').map(function () { return parseInt($(this).val()); }).get()
            };

            $.ajax({
                url: '/api/diary/' + id,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function () {
                    window.location.href = '/Diary';
                },
                error: function (xhr) {
                    alert($form.data('error-msg'));
                    console.error(xhr);
                }
            });
        });
    </script>
}