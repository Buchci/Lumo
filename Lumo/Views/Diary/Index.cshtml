#entryModal .modal-dialog {
    max-width: 700px;
}
#entryModalTitle {
    padding-left:15px;
    padding-right:15px;
    padding-top:5px;
}
#entryModalBtnClose {
    margin:10px;
}

#entryModal .modal-content {
    display: flex;
    flex-direction: column;
            padding-left: 15px;
            padding-right: 15px;
}

#entryModal .modal-body {
    overflow: visible;
    word-break: break-word;
    max-height: 50vh; /* optional: scroll if extremely long */
    overflow-y: auto;
}

#entryModalTitle {
    word-break: break-word;
}
</style>
