@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model RegisterModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 p-4" style="border-radius: 20px; background-color: var(--card-bg);">
                <div class="text-center mb-4">
                    <div class="display-5 mb-2">🌿</div>
                    <h2 class="fw-bold" style="color: var(--main-color);">@ViewData["Title"]</h2>
                    <p class="text-muted">@Localizer["Subtitle"]</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">@Localizer["EmailLabel"]</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Nickname" class="form-control custom-input" placeholder="@Localizer["NicknamePlaceholder"]" />
                        <label asp-for="Input.Nickname">@Localizer["NicknameLabel"]</label>
                        <span asp-validation-for="Input.Nickname" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="@Localizer["PasswordLabel"]" />
                        <label asp-for="Input.Password">@Localizer["PasswordLabel"]</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="@Localizer["ConfirmPasswordLabel"]" />
                        <label asp-for="Input.ConfirmPassword">@Localizer["ConfirmPasswordLabel"]</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lumo btn-lg py-3 mb-3">
                        @Localizer["RegisterBtn"]
                    </button>

                    <div class="text-center">
                        <p class="text-muted">
                            @Localizer["HaveAccount"]
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold" style="color: var(--main-color);">@Localizer["LoginLink"]</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-input {
        border: 2px solid transparent;
        border-radius: 12px;
        background-color: rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: var(--main-color);
            box-shadow: none;
            background-color: transparent;
        }

    [data-theme='dark'] .custom-input {
        background-color: rgba(255,255,255,0.05);
        color: white;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}