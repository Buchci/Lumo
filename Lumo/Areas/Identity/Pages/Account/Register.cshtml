@page
@model RegisterModel
@{
    ViewData["Title"] = "Dołącz do Lumo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 p-4" style="border-radius: 20px; background-color: var(--card-bg);">
                <div class="text-center mb-4">
                    <div class="display-5 mb-2">🌿</div>
                    <h2 class="fw-bold" style="color: var(--main-color);">@ViewData["Title"]</h2>
                    <p class="text-muted">Zacznij zapisywać swoje chwile już dziś.</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Adres E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Nickname" class="form-control custom-input" placeholder="Twój Nickname" />
                        <label asp-for="Input.Nickname">Nickname</label>
                        <span asp-validation-for="Input.Nickname" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="Hasło" />
                        <label asp-for="Input.Password">Hasło</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control custom-input" autocomplete="new-password" aria-required="true" placeholder="Potwierdź Hasło" />
                        <label asp-for="Input.ConfirmPassword">Potwierdź Hasło</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lumo btn-lg py-3 mb-3">
                        Zarejestruj się
                    </button>

                    <div class="text-center">
                        <p class="text-muted">Masz już konto? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold" style="color: var(--main-color);">Zaloguj się</a></p>
                    </div>
                </form>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    Tworząc konto, akceptujesz naszą <a href="#" class="text-muted">Politykę Prywatności</a>.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    /* Stylowanie inputów, aby pasowały do Lumo */
    .custom-input {
        border: 2px solid transparent;
        border-radius: 12px;
        background-color: rgba(0,0,0,0.05); /* Lekkie tło dla inputa */
        transition: all 0.3s ease;
    }

        .custom-input:focus {
            border-color: var(--main-color);
            box-shadow: none;
            background-color: transparent;
        }

    /* Dopasowanie do Dark Mode (jeśli używasz) */
    [data-theme='dark'] .custom-input {
        background-color: rgba(255,255,255,0.05);
        color: white;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}